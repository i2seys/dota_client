<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/heroRowLayout"
    android:weightSum="6"
    android:layout_marginVertical="3dp"
    android:background="@drawable/hero_row_shape">

    <TableRow>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/heroImage"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:paddingStart="5dp"
            android:paddingVertical="3dp"
            android:src="@drawable/graybg"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/primary_color"/>

        <TextView
            android:id="@+id/heroNameTextView"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="NONE"
            style="@style/StandartTextView"/>

        <TextView
            android:id="@+id/heroWinrateTextView"
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:gravity="center_vertical|right"
            android:layout_weight="2"
            android:text="0.0%"
            style="@style/StandartTextView"
            android:paddingEnd="7dp"
            android:drawableLeft="@drawable/orange_square"/>
    </TableRow>

</TableLayout>